model Post {
  id      Int     @id @default(autoincrement())
  title   String
  content String?

  // Поле для хранения ID автора
  authorId Int
  // Описание связи: поле authorId ссылается на id в модели User
  author   User @relation(fields: [authorId], references: [id])
}

model CartItem {
  id        Int     @id @default(autoincrement())
  userId    Int
  productId Int
  name      String // Название товара
  price     Float // Цена
  quantity  Int     @default(1)
  image     String? // URL изображения (опционально)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId]) // Один товар может быть в корзине пользователя только один раз
}
